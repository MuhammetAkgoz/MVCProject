@model ProductListViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Ürünler</h2>


<table class="table table-responsive" style="float: right">
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.ProductId</td>
            <td>@product.ProductName</td>
            <td>@product.QuantityPerUnit</td>
            <td>@product.UnitPrice</td>
            <td>@product.UnitsInStock</td>
            <td><a class="btn btn-sm btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Sepete Ekle</a></td>
        </tr>
    }
</table>
